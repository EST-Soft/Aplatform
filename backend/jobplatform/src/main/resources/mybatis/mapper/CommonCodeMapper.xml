<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jobplatform.fo.enterprise.domain.mapper.CommonCodeMapper">
	
	<!-- 지원자 상태 얻기 -->
	<select id="selectCommonCodeApplyCategoryData" resultType="jobplatform.fo.enterprise.domain.vo.CommonCodeVO">
		select code_id, code_name
		from P2_TBL_COMMON_CODE_DTL_S 
		where code_typ_id = 400 
			and code_id != 'ac';
	</select>
	
	<!-- 학력, 경력 상태 가져오기 -->
	<select id="findCommonCode" resultType="jobplatform.fo.enterprise.domain.vo.CommonCodeVO">
		select code_id, code_name
		from P2_TBL_COMMON_CODE_DTL_S
		where code_typ_id in (600, 800)
	</select>

</mapper>